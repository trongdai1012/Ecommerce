@model ContactViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item active" style="align-content:center">
                        <a asp-area="Admin" asp-controller="News" asp-action="Index">Quản lý liên hệ</a>
                    </li>
                    <li class="breadcrumb-item active" style="align-content:center">Chi tiết liên hệ</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
    <section class="content">
        <div class="row">
            <div class="col-md-9">
                <div class="box box-primary">
                    <div class="box-body no-padding">
                        <h1 align="center">
                            Chi tiết liên hệ
                        </h1>
                        <div class="mailbox-read-info">
                            <h4>Mã số: @Model.Id</h4>
                            <h4>Tiêu đề: @Model.Title</h4>
                            <h4>
                                Người gửi: @Model.CreateBy
                                <span class="mailbox-read-time pull-right">@Model.ContactAt</span>
                            </h4>
                        </div>
                        <div class="mailbox-controls with-border text-center">
                            <div class="btn-group">
                                <p align="center">
                                    <strong>Nội dung</strong>
                                </p>
                            </div>
                        </div>
                        <div class="mailbox-controls with-border text-center">
                            <div class="mailbox-read-message">
                                <p>@Model.Content</p>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer ">
                        @if (!Model.Status)
                        {
                            <div class="pull-right">
                                <button onclick="myFunction()" type="button" class="btn btn-default">
                                    <i class="fa fa-reply"></i> Nội dung trả lời:
                                </button>
                                <a onclick="return confirm('Bạn có muốn xoá phiên liên hệ');" href="/Admin/Contact/Delete/@Model.Id" type="button"
                                   class="btn btn-default">
                                    <i class="fa fa-trash-o"></i> Xóa
                                </a>
                                <a href="/Admin/Contact/Index" type="button" class="btn btn-default">
                                    <i class="fa fa-share"></i> Huỷ
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="pull-right">
                                <button onclick="myFunction()" type="button" class="btn btn-default">
                                    <i class="fa fa-reply"></i> Xem nội dung
                                </button>
                                <a href="/Admin/Contact/Index" type="button" class="btn btn-default">
                                    <i class="fa fa-share"></i> Huỷ
                                </a>
                            </div>
                        }

                        @if (Model.Status == false)
                        {
                            <p>Trạng thái: Chưa xử lý</p>
                        }
                        else
                        {
                            <p>
                                Trạng thái: Đã xử lý <i>bởi </i> '@Model.HandlerBy'
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="myDiv" style="display: none">
            <div class="col-md-9">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">
                            Nội dung trả lời
                        </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body pad" style="width: 100%">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form asp-action="Detail" role="form" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Content" />
                            <input type="hidden" asp-for="ContactAt" />
                            <input type="hidden" asp-for="CreateBy" />
                            <input type="hidden" asp-for="HandlerBy" />
                            <input type="hidden" asp-for="Status" />
                            <input type="hidden" asp-for="Title" />
                            @if (Model.Status)
                            {
                                <textarea readonly="readonly" asp-for="ContentReply" rows="10" cols="80" style="width: 100%"></textarea>
                            }
                            else
                            {
                                <textarea asp-for="ContentReply" rows="10" cols="80" style="width: 100%"></textarea>
                                <div>
                                    <span asp-validation-for="ContentReply" class="text-danger"></span>
                                </div>
                                <div class="box-footer">
                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fa fa-reply"></i>Gửi
                                        </button>
                                    </div>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @section scripts
        {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script>
            function myFunction() {
                var x = document.getElementById("myDiv");
                if (x.style.display === "none") {
                    x.style.display = "block";
                } else {
                    x.style.display = "none";
                }
            }
        </script>
    }
