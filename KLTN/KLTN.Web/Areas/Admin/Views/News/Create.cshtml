@model KLTN.DataModels.Models.News.NewsViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- general form elements -->
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thêm mới Laptop</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form role="form" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label>Tên bài viết</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Nhập tên bài viết.">
                <div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label>Mô tả sản phẩm</label>
                <textarea type="text" class="form-control" asp-for="Content" placeholder="Nhập nội dung bài viết"></textarea>
                <div>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Ảnh hiển thị</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="file">
                        <label class="custom-file-label">Chọn ảnh</label>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Thêm</button>
        </div>
    </form>
</div>
<!-- /.card -->

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}

