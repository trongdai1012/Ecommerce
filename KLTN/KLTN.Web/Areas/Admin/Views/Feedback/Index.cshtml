@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item active" style="align-content:center">
                        <a asp-area="Admin" asp-controller="Feedback" asp-action="Index">Quản lý phản hồi</a>
                    </li>
                    <li class="breadcrumb-item active" style="align-content:center">Danh sách đánh giá sản phẩm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- /.box -->
<div class="col-12">
    <div class="card">
        <div class="card-header" style="margin:auto">
            <h3 class="card-title"><b>Danh sách đánh giá</b></h3>
        </div>
        <!-- /.box-header -->
        <div class="card-body box-body table-responsive">
            <table id="feedback-index" class="table table-bordered columns-align-center table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tên khách hàng</th>
                        <th>Mã khách hàng</th>
                        <th>Tên sản phẩm</th>
                        <th>Điểm đánh giá</th>
                        <th>Thời gian</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<!-- /.box -->

@section scripts
    {
    <script src="~/js/feedbackjs/feedback.js"></script>
    <script src="~/lib/moment/moment.min.js" asp-append-version="true"></script>
    <script src="~/lib/datetime-moment/datetime-moment.js" asp-append-version="true"></script>
    <script>
        $.fn.dataTable.moment("DD/MM/YYYY HH:mm:ss");
        $.fn.dataTable.moment("DD/MM/YYYY");

        $("#feedback-index").DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Vietnamese.json"
            },
            // Design Assets
            stateSave: true,
            autoWidth: true,
            // ServerSide Setups
            processing: true,
            serverSide: true,
            // Paging Setups
            paging: true,
            // Searching Setups
            searching: { regex: true },
            // Ajax Filter
            ajax: {
                url: "/Admin/Feedback/LoadFeedback",
                type: "POST",
                contentType: "application/json",
                dataType: "json",
                data: function (d) {
                    return JSON.stringify(d);
                }
            },
            // Columns Setups
            columns: [
                { data: "id" },
                { data: "customerName" },
                { data: "customerId" },
                { data: "productName" },
                { data: "rate" },
                {
                    data: "ratedAt",
                    render: function (data, type) {
                        // If display or filter data is requested, format the date
                        if (type === "display" || type === "filter") {
                            return moment(data).format("DD/MM/YYYY");
                        }
                        // Otherwise the data type requested (`type`) is type detection or
                        // sorting data, for which we want to use the raw date value, so just return
                        // that, unaltered
                        return data;
                    }
                },
                {
                    data: "status",
                    "mRender": function (data, type, row) {
                        var url;
                        if (row["status"].toString() === "true") {
                            url =
                                "<p><strong>Kích hoạt <span class=\"fa fa-check\" style=\"color:green\"></strong></p>";
                        } else {
                            url =
                                "<p><strong>Kích hoạt <span class=\"fa fa-times\" style=\"color:red\"></strong></p>";
                        }
                        return url;
                    }
                },
                {
                    "mData": "id",
                    "mRender": function (data, type, row) {
                        var url;
                        if (row["status"].toString() === "true") {
                            url = "<a title=\"Chi tiết\" href=\"Detail\\" +
                                data +
                                "\"" +
                                "class = \"btn btn-info fa fa-info-circle\"></a> " +
                                "<a title=\"Sửa\" href=\"Update\\" +
                                data +
                                "\"" +
                                " class=\"btn btn-warning fa fa-edit\"></a> " +
                                "<a title=\"Khoá\" href=\"#\" class=\"btn-active btn btn-danger fa fa-lock\" data-id=\"" +
                                row["id"] +
                                "\"></a>";
                        } else {
                            url = "<a title=\"Chi tiết\" href=\"Detail\\" +
                                data +
                                "\"" +
                                "class = \"btn btn-info fa fa-info-circle\"></a> " +
                                "<a href=\"Update\\" +
                                data +
                                "\"" +
                                " class=\"btn btn-warning fa fa-edit\"></a> " +
                                "<a title=\"Mở khoá\" href=\"#\" class=\"btn-active btn btn-success fa fa-unlock\" data-id=\"" +
                                row["id"] +
                                "\"></a>";
                        }
                        return url;
                    }
                }
            ]
        });
    </script>
}


