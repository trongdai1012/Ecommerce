@model IEnumerable<KLTN.DataModels.Models.ReportRevenue.ProductChartModel>
@{
    var xLabels = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(x => x.NameProduct).ToList());
    var yValues = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(x => x.Count).ToList());
}
<div class="card-header d-flex p-0 ui-sortable-handle" style="cursor: move;">
    <h3 class="card-title p-3">
        <i class="fas fa-chart-pie mr-1"></i>
        Sản phẩm được mua nhiều nhất
    </h3>
    <ul class="nav nav-pills ml-auto p-2">
        <li class="nav-item">
            <a onclick="ProductChartByWeek()" class="nav-link" href="#" data-toggle="tab">Tuần</a>
        </li>
        <li class="nav-item">
            <a onclick="ProductChartByMonth()" class="nav-link" href="#" data-toggle="tab">Tháng</a>
        </li>
    </ul>
</div>
<div class="card-body">
    <div class="position-relative mb-4">
        <canvas id="product-chart" height="400"></canvas>
    </div>
</div>
<script type="text/javascript">
    $(function() {
        var chartName = "product-chart";
        var ctx = document.getElementById(chartName).getContext('2d');
        var data = {
            labels: @Html.Raw(xLabels),
            datasets: [
                {
                    label: "Drinks Chart",
                    backgroundColor: ['#f56954', '#00a65a', '#f39c12', '#00c0ef', '#3c8dbc', '#d2d6de'],
                    borderWidth: 1,
                    data: @Html.Raw(yValues)
                }
            ]
        };

        var options = {
            maintainAspectRatio: false,
            responsive: true,
            legend: {
                position: "right"
            }
        };
        var myChart = new Chart(ctx,
            {
                options: options,
                data: data,
                type: 'pie'

            });
    });
</script>