@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<div id="overView">
</div>


<div class="row">
    <section class="col-lg-7 connectedSortable ui-sortable">
        <!-- Custom tabs (Charts with tabs)-->
        <div class="card" id="chartAuction">
        </div>
        <!-- /.card -->
    </section>
    <section class="col-lg-5 connectedSortable ui-sortable">
        <div class="card" id="chartProduct">
        </div>
    </section>

</div>


<div class="row">
    <div class="col-md-12" id="chartRevenue">
    </div>
    <!-- /.col -->
</div>

@section scripts
    {
    <script>

        $(function() {
            GetAuctionChart();
            GetProductChart();
            GetRevenueChart();
            GetOverView();
        });

        function AuctionChartByWeek() {
            GetAuctionChart();
        }
        function AuctionChartByMonth() {
            var dateModel = {
                Filter: "month"
            };
            GetAuctionChart(dateModel);
        }

        function ProductChartByWeek() {
            GetProductChart();
        }
        function ProductChartByMonth() {
            var dateModel = {
                Filter: "month"
            };
            GetProductChart(dateModel);
        }

        function RevenueChartByWeek() {
            GetRevenueChart();
        }
        function RevenueChartByMonth() {
            var dateModel = {
                Filter: "month"
            };
            GetRevenueChart(dateModel);
        }

        function OverViewByWeek() {
            GetOverView();
        }
        function OverViewByMonth() {
            var dateModel = {
                Filter: "month"
            };
            GetOverView(dateModel);
        }

        function GetAuctionChart(dateModel) {
            $.ajax({
                    url: '/Admin/Home/OrderChart',
                    type: 'POST',
                    cache: false,
                    async: true,
                    dataType: "html",
                    data: dateModel
                })
                .done(function(result) {
                    $('#chartAuction').html(result);
                }).fail(function(xhr) {
                    console.log('error : ' + xhr.status + ' - ' + xhr.statusText + ' - ' + xhr.responseText);
            });
        }

        function GetProductChart(dateModel) {
            $.ajax({
                    url: '/Admin/Home/ProductChart',
                    type: 'POST',
                    cache: false,
                    async: true,
                    dataType: "html",
                    data: dateModel
                })
                .done(function(result) {
                    $('#chartProduct').html(result);
                }).fail(function(xhr) {
                    console.log('error : ' + xhr.status + ' - ' + xhr.statusText + ' - ' + xhr.responseText);
            });
        }

        function GetRevenueChart(dateModel) {
            $.ajax({
                url: '/Admin/Home/RevenueChart',
                    type: 'POST',
                    cache: false,
                    async: true,
                    dataType: "html",
                    data: dateModel
                })
                .done(function(result) {
                    $('#chartRevenue').html(result);
                }).fail(function(xhr) {
                    console.log('error : ' + xhr.status + ' - ' + xhr.statusText + ' - ' + xhr.responseText);
            });
        }

        function GetOverView(dateModel) {
            $.ajax({
                url: '/Admin/Home/ReportOverView',
                type: 'POST',
                cache: false,
                async: true,
                dataType: "html",
                data: dateModel
            })
                .done(function (result) {
                    $('#overView').html(result);
                }).fail(function (xhr) {
                    console.log('error : ' + xhr.status + ' - ' + xhr.statusText + ' - ' + xhr.responseText);
                });
        }

    </script>
}
