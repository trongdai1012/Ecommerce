@model RetypePassword
@{
    ViewData["Title"] = "RetypePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>Big Const Ecommerce</h2>
                    <p>Luôn sẵn sàng phục vụ</p>
                </div>
                <div class="page_link">
                    <a href="/">Trang chủ</a>
                    <a>Đặt lại mật khẩu</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->

<div class="col-md-11 row" style="margin-top:30px; margin-bottom:30px">
    <div class="col-md-5"></div>
    <div class="col-md-3">
        <!-- Horizontal Form -->
        <div>
            <div>
                <h3 style="text-align:center"><b style="color:black">Đặt lại mật khẩu</b></h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form class="form-horizontal" action="RetypePassword" method="post">
                <input asp-for="ConfirmString" style="width:100%" type="hidden" />
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu mới">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu">
                        </div>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!-- /.card-body -->
                <div style="margin-left:33px;">
                    <button type="submit" style="width:110px;" class="btn btn-info">Gửi</button>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
    </div>
</div>

