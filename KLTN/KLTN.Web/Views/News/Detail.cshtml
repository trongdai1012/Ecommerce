@model Tuple<NewsViewModel, IEnumerable<NewsViewModel>>
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text {
        display: block;
        width: 271px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
</style>

<!--================Home Banner Area =================-->
<section class="banner_area" style="margin-top:30px">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>Big Const Ecommerce</h2>
                    <p>Luôn sẵn sàng phục vụ</p>
                </div>
                <div class="page_link">
                    <a href="/">Trang chủ</a>
                    <a>Chi tiết bài viết</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Blog Area =================-->
<section class="blog_area single-post-area section_gap" style="margin-top:30px">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="blog_details">
                    <h2>
                        @Model.Item1.Title
                    </h2>
                </div>
                <div class="single-post">
                    <div class="feature-img">
                        <img class="img-fluid" src="~/DataImage/@Model.Item1.Image" alt="">
                    </div>
                    <div class="blog_details">
                        <p class="excert">
                            @Model.Item1.Content
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget post_category_widget">
                        <h4 class="widget_title">Mục tin tức</h4>
                        <ul class="list cat-list">
                            @foreach (var item in Model.Item2)
                            {
                                <li>
                                    <a href="/News/Detail/@item.Id" class="d-flex">
                                        <h4><b style="color:black">@item.Title</b></h4><br />
                                    </a>
                                </li>
                                <li>
                                    <p class="text">@item.Content</p>
                                </li>
                            }
                        </ul>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================Blog Area =================-->
