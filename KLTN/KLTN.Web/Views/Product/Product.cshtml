@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<LaptopViewModel>

@{
    ViewData["Title"] = "Tìm kiếm sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<!--================Home Banner Area =================-->
<section class="banner_area" style="margin-top:30px">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>Big Const Ecommerce</h2>
                    <p>Luôn sẵn sàng phục vụ</p>
                </div>
                <div class="page_link">
                    <a href="/">Trang chủ</a>
                    <a>Tìm kiếm sản phẩm</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Category Product Area =================-->
<section class="cat_product_area section_gap">
    <div class="container">
        <div class="row flex-row-reverse" id="laptop">
        </div>
    </div>
    <a id="searchSave" style="display:none">@ViewBag.SearchKey</a>
    <a id="saveBrandId" style="display:none"></a>
    <a id="saveOrderId" style="display:none"></a>
</section>
<!--================End Category Product Area =================-->
@section scripts
