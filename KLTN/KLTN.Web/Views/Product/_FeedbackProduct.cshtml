<div class="tab-pane fade show active"
     id="review"
     role="tabpanel"
     aria-labelledby="review-tab">
    <div class="row">
        <div class="col-lg-6">
            <div class="row total_rate">
                <div class="col-6">
                    <div class="box_total">
                        <h5>Điểm</h5>
                        <h4>@Model.Item3</h4>
                        <h6>(@Model.Item6 Đánh giá)</h6>
                    </div>
                </div>
                <div class="col-6">
                    <div class="rating_list">
                        <h3>Chi tiết @Model.Item6 đánh giá</h3>
                        <ul class="list">
                            <li>
                                <a href="#">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i> @Model.Item2.FiveStar
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i> @Model.Item2.FourStar
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i> @Model.Item2.ThreeStar
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i> @Model.Item2.TwoStar
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i> @Model.Item2.OneStar
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="review_list">
                @foreach (var item in Model.Item1)
                {
                    <div class="review_item">
                        <div class="media">
                            <div class="d-flex">
                                <img src="~/avatar.jpg" width="71" height="70" style="border-radius: 50%;"
                                     alt="" />
                            </div>
                            <div class="media-body">
                                <h4>@item.CustomerName</h4>
                                @if (item.Rate == 5)
                                {
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                else if (item.Rate == 4)
                                {
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                else if (item.Rate == 3)
                                {
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                else if (item.Rate == 2)
                                {
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                }
                                else
                                {
                                    <i class="fa fa-star"></i>
                                }
                            </div>
                        </div>
                        <p>
                            @item.Comment
                        </p>
                        <p>@item.RatedAt.ToLocalTime().ToString("dd-MM-yyyy hh:mm:ss")</p>
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-6">
            <div class="review_box">
                <h4>Viết đánh giá</h4>
                <p>Điểm đánh giá của bạn:</p>
                <div class="container">
                    <div class="starrating risingstar d-flex justify-content-center flex-row-reverse">
                        <input onclick="GetValueStar('star5')" type="radio" id="star5" name="rating" value="5" /><label for="star5" title="5 star"></label>
                        <input onclick="GetValueStar('star4')" type="radio" id="star4" name="rating" value="4" /><label for="star4" title="4 star"></label>
                        <input onclick="GetValueStar('star3')" type="radio" id="star3" name="rating" value="3" /><label for="star3" title="3 star"></label>
                        <input onclick="GetValueStar('star2')" type="radio" id="star2" name="rating" value="2" /><label for="star2" title="2 star"></label>
                        <input onclick="GetValueStar('star1')" type="radio" id="star1" name="rating" value="1" /><label for="star1" title="1 star"></label>
                    </div>
                </div>
                <p>Bình luận</p>
                <div class="col-md-12">
                    <div class="form-group">
                        <textarea type="text"
                                  class="form-control"
                                  id="comment"
                                  name="name"
                                  placeholder="Bình luận"></textarea>
                    </div>
                </div>
                <div class="col-md-12 text-right btn-rate">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button type="submit"
                                value="submit"
                                id="rating-btn"
                                class="btn submit_btn">
                            Gửi
                        </button>
                    }
                    else
                    {
                        @if (Model.Item5 == null)
                        {
                            <a asp-controller="Account" onMouseOver="this.style.color='#71cd14'" asp-action="Authentication" asp-route-requestPath="/Product/LaptopDetail/@Model.Item2.Id"
                               class="btn submit_btn" style="font-size:12px;color:#fff">Gửi</a>
                        }
                        else
                        {
                            <a asp-controller="Account" onMouseOver="this.style.color='#71cd14'" asp-action="Authentication" asp-route-requestPath="/Product/MobileDetail/@Model.Item2.Id"
                               class="btn submit_btn" style="font-size:12px;color:#fff">Gửi</a>
                        }

                    }
                </div>
            </div>
        </div>
    </div>
</div>