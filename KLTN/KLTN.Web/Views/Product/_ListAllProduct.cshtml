@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<LaptopViewModel>
@{
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<div class="col-lg-9">
    <div class="product_top_bar">
        <div class="left_dorp">
            <label>Sắp xếp</label>
            <select class="sorting" id="orderId" onchange="GetListLapOrder()">
                <option value="1">Giá tăng dần</option>
                <option value="2">Giá giảm dần</option>
            </select>
        </div>
    </div>
    <div class="latest_product_inner">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-product">
                        <div class="product-img">
                            <img class="card-img"
                                 src="/DataImage/@item.ImageDefault"
                                 width="255"
                                 height="255"
                                 alt="" />
                            <div class="p_icon">
                                <a asp-controller="Product" asp-action="LaptopDetail" asp-route-id="@item.Id">
                                    <i class="ti-eye"></i>
                                </a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a onclick="LikeProduct(@item.Id)">
                                        <i class="ti-heart"></i>
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="Authentication" asp-controller="Account">
                                        <i class="ti-heart"></i>
                                    </a>
                                }
                                <a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.Id">
                                    <i class="ti-shopping-cart"></i>
                                </a>
                            </div>
                        </div>
                        <div class="product-btm">
                            <a href="#" class="d-block">
                                <h4>@item.Name</h4>
                            </a>
                            <div class="mt-3">
                                <span class="mr-4">@string.Format(info, "{0:C0}", @item.CurrentPrice)</span>
                                <div>@string.Format(info, "{0:C0}", @item.InitialPrice)</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div style="float: right">
            @Html.PagedListPager(Model, pageIndex => Url.Action("ListAll", new { pageIndex }))
        </div>
    </div>
</div>
<div class="col-lg-3">
    <div class="left_sidebar_area">
        <aside class="left_widgets p_filter_widgets">
            <div class="l_w_title">
                <h3 style="font-size:25px;"><b style="color:black">Thương hiệu</b></h3>
            </div>
            <div>
                <ul class="list">
                    @foreach (var item in ViewBag.ListBrand)
                    {
                        <li style="margin-left:15px">
                            <a style="font-size:20px" id="select-checkbox-@item.Id" onclick="GetListLap(@item.Id)">@item.Name</a>
                        </li>
                    }
                    <li style="margin-left:15px">
                        <a style="font-size:20px" onclick="GetAllLap()">Tất cả</a>
                    </li>
                </ul>
            </div>
        </aside>
    </div>
</div>
