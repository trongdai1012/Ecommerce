@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/owl.carousel.min.css" />
<link rel="stylesheet" href="~/css/style1.css"/>

<!-- Hero section -->
<section class="hero-section" style="align-content:center">
    <div class="hero-slider owl-carousel">
        @foreach (var item in Model)
        {
        <div class="hs-item set-bg" data-setbg="/DataImage/@item.Image">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-8 col-lg-3 text-white">
                            @if (item.CategoryId == 1)
                            {
                                <span style="color:brown">Laptop</span>
                                <h2 style="color:black">@item.Name</h2>
                                <p>@item.Description</p>
                                <a href="/Product/LaptopDetail/@item.Id" class="site-btn sb-line">Xem chi tiết</a>
                                <a href="/Cart/Buy/@item.Id" class="site-btn sb-white">THÊM GIỎ HÀNG</a>
                            }
                            else
                            {
                                <span>Điện thoại</span>
                                <h2>@item.Name</h2>
                                <p>@item.Description</p>
                                <a href="/Product/MobileDetail/@item.Id" class="site-btn sb-line">Xem chi tiết</a>
                                <a href="/Cart/Buy/@item.Id" class="site-btn sb-white">THÊM GIỎ HÀNG</a>
                            }

                        </div>
                    </div>
                    <div class="offer-card text-white" style="width:250px;height:250px;">
                        <span>Giá chỉ</span>
                        <h2>@item.CurrentPrice k</h2>
                        <p>Tới luôn</p>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="container">
        <div class="slide-num-holder" id="snh-1"></div>
    </div>
</section>
<!-- Hero section end -->
<!-- Start feature Area -->
<section class="feature-area section_gap_bottom_custom" style="padding-bottom:0px;">
    <div class="container" style="border-bottom:1px;border-bottom-style:outset">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a class="title">
                        <i class="flaticon-money"></i>
                        <h3>Giá cả hợp lý</h3>
                    </a>
                    <p>Trên từng mặt hàng</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a class="title">
                        <i class="flaticon-truck"></i>
                        <h3>Giao hàng miễn phí</h3>
                    </a>
                    <p>Mọi miền tổ quốc</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a class="title">
                        <i class="flaticon-support"></i>
                        <h3>Hỗ trợ 24/7</h3>
                    </a>
                    <p>Nhiệt tình thân thiện</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="single-feature">
                    <a class="title">
                        <i class="flaticon-blockchain"></i>
                        <h3>Bảo mật thông tin</h3>
                    </a>
                    <p>Tất cả người dùng</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End feature Area -->

<section class="inspired_product_area section_gap_bottom_custom" id="listProduct"></section>

@section scripts
    {
    <!--====== Javascripts & Jquery ======-->
    <script src="~/js/jquery.slicknav.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.nicescroll.min.js"></script>
    <script src="~/js/main.js"></script>
    <script>
        function GetListCart() {
            $.ajax({
                url: '/Cart/GetCart',
                type: 'POST',
                cache: false,
                async: true,
                dataType: "html"
            }).done(function (result) {
                $('#list-cart').html(result);
            });
        }
    </script>
    <script>
        //        $(function () {
        //            GetListProduct();
        //        });
        window.onload = function () {
            GetListProduct();
            GetListCart();
        }
        function GetListProduct() {
            $.ajax({
                url: '/Home/ListProduct',
                type: 'POST',
                cache: false,
                async: true,
                dataType: "html"
            }).done(function (result) {
                $('#listProduct').html(result);
            });
        }
    </script>
    <script>
        function LikeProduct(id) {
            $.ajax({
                url: '/Product/LikeProduct',
                type: 'POST',
                cache: false,
                async: true,
                dataType: "html",
                data: { productId: id },
                success: function () {
                    GetListProduct();
                    alert('Bạn vừa thích sản phẩm có mã số : ' + id);
                }
            });
        }
    </script>
}